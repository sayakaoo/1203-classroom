{
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    { "src": "api/synthesize.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/evaluate", "dest": "api/evaluate.js" },
    { "src": "/api/chat", "dest": "api/chat.js" },
    { "src": "/(.*)", "dest": "/public/$1" },
    { "src": "/api/textToSpeech", "dest": "api/textToSpeech.js" }
  ]
}

